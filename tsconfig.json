{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "js",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"],
    "include": ["global.d.ts", "js/*"],
    "compileOnSave": false
}
